
<h2>All Movies</h2>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th class=<%="#{@title_bg}"%>>
        <%= link_to "Movie Title", movies_path(@ratings_to_show==[] ? {:sort => "title"} : {:sort => "title", :ratings => params[:ratings]}), id:'title_header', class:"#{@title_bg}"%>
      </th>
      <th>Rating</th>
      <th class=<%="#{@date_bg}"%>>
        <%= link_to "Release Date", movies_path(@ratings_to_show==[] ? {:sort => "date"} : {:sort => "date", :ratings => params[:ratings]}), id:'release_date_header', class:"#{@date_bg}"%>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <%= form_tag movies_path, method: :get, id: 'ratings_form' do %>
    Include:
    <% @all_ratings.each do |rating| %>
      <div class="form-check  form-check-inline">
        <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>
        <%= check_box_tag "ratings[#{rating}]", "1",  @ratings_to_show.include?(rating), class: 'form-check-input' %>
      </div>
    <% end %>
    <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
  <% end %>
  <tbody>
    <% @movies_to_show.each do |movie| %>
      <tr>
        <td>
          <%= movie.title%>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
